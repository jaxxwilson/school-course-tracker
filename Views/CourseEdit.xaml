<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SCT.Views.CourseEdit"
             Title="Edit Course">
    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="Home" 
                     Text="Home" 
                     Clicked="HomeBtn_Clicked" />
        <ToolbarItem x:Name="Cancel" 
                     Text="Cancel" 
                     Clicked="CancelBtn_Clicked" />
        <ToolbarItem x:Name="Save" 
                     Text="Save" 
                     Clicked="SaveBtn_Clicked" />
    </ContentPage.ToolbarItems>

    <ScrollView>
        <VerticalStackLayout Margin="25,25,25,0">
            <Label Text="Course" 
                   FontSize="20"
                   FontAttributes="Bold"
                   Margin="0,0,0,20"/>
            <Label Text="Title" />
            <Entry x:Name="CourseTitle" 
               Placeholder="Course Title" />
            <Label Text="Status" />
            <Picker x:Name="Status">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Inactive</x:String>
                        <x:String>In Progress</x:String>
                        <x:String>Completed</x:String>
                        <x:String>Dropped</x:String>
                        <x:String>Planned to Take</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>
            <Label Text="Start Date" />
            <DatePicker x:Name="StartDate" />
            <Label Text="End Date" />
            <DatePicker x:Name="EndDate" />

            <Label Text="Instructor" 
                   FontSize="20"
                   FontAttributes="Bold"
                   Margin="0,20,0,20"/>
            <Label Text="Name" />
            <Entry x:Name="Name" 
                   Placeholder="Name" />
            <Label Text="Phone" />
            <Entry x:Name="Phone" 
                   Placeholder="Phone" />
            <Label Text="Email" />
            <Entry x:Name="Email" 
                   Placeholder="Email" />

            <Label Text="Notes" />
            <Entry x:Name="Notes"
                   Placeholder="Notes" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>