<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SCT.Views.TermAddEdit"
             Title="Term Add/Edit">
    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="Home" Text="Home" Clicked="BtnHome_Clicked" ></ToolbarItem>
        <ToolbarItem x:Name="Cancel" Text="Cancel" Clicked="CancelBtn_Clicked" ></ToolbarItem>
        <ToolbarItem x:Name="Save" Text="Save" Clicked="SaveBtn_Clicked" ></ToolbarItem>
    </ContentPage.ToolbarItems>

    <VerticalStackLayout Margin="25,25,25,0">
        <Label Text="Title" />
        <Entry x:Name="TermTitle" 
               Placeholder="Term Title" />
        <Label Text="Start Date" />
        <DatePicker x:Name="StartDate" />
        <Label Text="End Date" />
        <DatePicker x:Name="EndDate" />
    </VerticalStackLayout>
</ContentPage>