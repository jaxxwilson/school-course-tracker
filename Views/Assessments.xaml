<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SCT.Views.Assessments"
             Title="Course Details">
    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="Home" 
                     Text="Home" 
                     Clicked="BtnHome_Clicked"/>
        <ToolbarItem x:Name="Edit"
                     Text="Edit" 
                     Clicked="BtnEdit_Clicked"/>
    </ContentPage.ToolbarItems>

    <ScrollView>
        <VerticalStackLayout>
            <HorizontalStackLayout Margin="0,0,0,20" 
                                   BackgroundColor="SteelBlue">
                <Button x:Name="Overview" 
                        Text="Overview" 
                        Clicked="BtnOverview_Clicked" 
                        BackgroundColor="SteelBlue" />
                <Button x:Name="Assessment" 
                        Text="Assessments" 
                        BackgroundColor="DarkGoldenrod" />
            </HorizontalStackLayout>

            <StackLayout Margin="25,0,0,25">
                <HorizontalStackLayout>
                    <Label Text="Performance Assessment"
                           FontSize="22" 
                           Margin="0,10,10,10"/>
                    <Button Text="+" 
                            x:Name="AddPA"
                            WidthRequest="35"
                            HeightRequest="35"
                            FontAttributes="Bold"
                            FontSize="13"
                            BackgroundColor="Green"
                            Clicked="BtnAddPA_Clicked" />
                </HorizontalStackLayout>
                <HorizontalStackLayout>
                    <Label Text="{Binding PerformanceAssessment.Title}"
                           FontSize="20" 
                           Margin="0,10,10,10"/>
                    <Button Text="x"
                            x:Name="DeletePA"
                            WidthRequest="35"
                            HeightRequest="35"
                            FontAttributes="Bold"
                            FontSize="13"
                            BackgroundColor="DarkGoldenrod"
                            Clicked="BtnDeletePA_Clicked" />
                </HorizontalStackLayout>
                <HorizontalStackLayout>
                    <Label Text="{Binding PerformanceAssessment.StartDate, StringFormat='{0:MM/dd/yyyy}'}"
                           FontSize="14"/>
                    <Label Text="  -  "
                           x:Name="LblPADash"/>
                    <Label Text="{Binding PerformanceAssessment.EndDate, StringFormat='{0:MM/dd/yyyy}'}"
                           FontSize="14"
                           Margin="0,0,0,20"/>
                </HorizontalStackLayout>


                <HorizontalStackLayout>
                    <Label Text="Objective Assessment"
                       FontSize="22" 
                       Margin="0,10,10,10"/>
                    <Button Text="+" 
                        x:Name="AddOA"
                        WidthRequest="35"
                        HeightRequest="35"
                        FontAttributes="Bold"
                        FontSize="13"
                        BackgroundColor="Green"
                        IsVisible="True"
                        Clicked="BtnAddOA_Clicked" />
                </HorizontalStackLayout>
                <HorizontalStackLayout>
                    <Label Text="{Binding ObjectiveAssessment.Title}"
                           FontSize="20"
                           Margin="0,10,10,10"/>
                    <Button Text="x"
                            x:Name="DeleteOA"
                            WidthRequest="35"
                            HeightRequest="35"
                            FontAttributes="Bold"
                            FontSize="13"
                            BackgroundColor="DarkGoldenrod"
                            Clicked="BtnDeleteOA_Clicked" />
                </HorizontalStackLayout>
                <HorizontalStackLayout>
                    <Label Text="{Binding ObjectiveAssessment.StartDate, StringFormat='{0:MM/dd/yyyy}'}"
                           FontSize="14"
                           Margin="0,0,0,15"/>
                    <Label Text="   -   "
                           x:Name="LblOADash"/>
                    <Label Text="{Binding ObjectiveAssessment.EndDate, StringFormat='{0:MM/dd/yyyy}'}"
                           FontSize="14"
                           Margin="0,0,0,15"/>
                </HorizontalStackLayout>
            </StackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
    