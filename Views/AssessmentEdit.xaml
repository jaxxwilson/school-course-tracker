<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SCT.Views.AssessmentEdit"
             Title="AssessmentEdit">
    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="Home" Text="Home" Clicked="BtnHome_Clicked" ></ToolbarItem>
        <ToolbarItem x:Name="Cancel" Text="Cancel" Clicked="CancelBtn_Clicked" ></ToolbarItem>
        <ToolbarItem x:Name="Save" Text="Save" Clicked="SaveBtn_Clicked" ></ToolbarItem>
    </ContentPage.ToolbarItems>

    <VerticalStackLayout Margin="25,25,25,0">
        <Label Text="Title" 
           x:Name="LblPATitle"/>
        <Entry x:Name="PATitle" 
           Placeholder="Performance Assessment Title" />
        <Label Text="Start Date" 
           x:Name="LblPAStartDate"/>
        <DatePicker x:Name="PAStartDate" />
        <Label Text="End Date" 
           x:Name="LblPAEndDate"/>
        <DatePicker x:Name="PAEndDate" />

        <Label Text="Title" 
           x:Name="LblOATitle"/>
        <Entry x:Name="OATitle" 
           Placeholder="Objective Assessment Title" />
        <Label Text="Start Date" 
           x:Name="LblOAStartDate"/>
        <DatePicker x:Name="OAStartDate" />
        <Label Text="End Date" 
           x:Name="LblOAEndDate"/>
        <DatePicker x:Name="OAEndDate" />
    </VerticalStackLayout>
</ContentPage>